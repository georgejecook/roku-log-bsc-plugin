{
    "name": "roku-log-bsc-plugin",
    "version": "0.7.0",
    "description": "Visual studio plugin for roku logger",
    "files": [
        "dist/**/!(*.spec.*)*"
    ],
    "main": "dist/plugin.js",
    "directories": {
        "test": "test"
    },
    "dependencies": {
        "@rokucommunity/bslib": "^0.1.1",
        "@types/node": "^16.18.10",
        "bslib": "npm:@rokucommunity/bslib@^0.1.1",
        "source-map": "^0.7.3",
        "stringify-object": "^3.3.0",
        "vscode-languageserver": "~6.1.1",
        "vscode-languageserver-protocol": "~3.15.3"
    },
    "devDependencies": {
        "@types/chai": "^4.1.2",
        "@types/expect": "^24.3.0",
        "@types/fs-extra": "^9.0.13",
        "@types/mocha": "^5.2.7",
        "@types/sinon": "^9.0.4",
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "@typescript-eslint/parser": "^4.4.1",
        "brighterscript": "^0.61.2",
        "chai": "^4.2.0",
        "chai-files": "^1.4.0",
        "chai-subset": "^1.6.0",
        "eslint": "^7.32.0",
        "eslint-plugin-github": "4.3.0",
        "eslint-plugin-no-only-tests": "2.6.0",
        "fs-extra": "^9.1.0",
        "minimatch": "^3.0.4",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "outdent": "^0.8.0",
        "roku-deploy": "^3.2.4",
        "sinon": "^9.0.2",
        "source-map-support": "^0.5.13",
        "trim-whitespace": "^1.3.3",
        "ts-node": "^9.0.0",
        "typescript": "^4.9.4",
        "typescript-formatter": "^7.2.2",
        "undent": "^0.1.0"
    },
    "scripts": {
        "preversion": "npm run build && npm run test && npm run lint",
        "clean": "rm -rf ./dist && mkdir dist",
        "compile": "npm run clean && tsc -p .",
        "prepublishOnly": "npm run build",
        "lint": "eslint \"src/**/*.ts\"",
        "build": "npm run compile",
        "cli": "npm run compile && npm unlink && npm link",
        "test": "mocha",
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
        "publish-npm": "npm run preversion && npm publish",
        "publish-npm:beta": "npm run preversion && npm publish --tag=beta",
        "local": "ts-node scripts/install-local.js",
        "remote": "ts-node scripts/install-npm.js"
    },
    "preferGlobal": true,
    "keywords": [
        "brightscript",
        "scenegraph",
        "roku",
        "britherscript"
    ],
    "author": "George Cook",
    "repository": {
        "type": "git",
        "url": "https://github.com/georgejecook/roku-log-bsc-plugin.git"
    },
    "license": "ISC",
    "watch": {
        "test": {
            "extensions": "ts",
            "patterns": [
                "src"
            ]
        }
    },
    "nyc": {
        "include": [
            "src/**/!(*.spec).ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "sourceMap": true,
        "instrument": true,
        "check-coverage": true,
        "lines": 5,
        "statements": 5,
        "functions": 5,
        "branches": 5
    },
    "mocha": {
        "spec": "src/**/*.spec.ts",
        "fullTrace": true,
        "require": [
            "source-map-support/register",
            "ts-node/register"
        ]
    }
}
